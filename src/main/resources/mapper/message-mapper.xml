<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="message">
  <select id="selectCheck" parameterType="string" resultType="_int">
  	select count(*) from MESSAGE m join member e on(m.member_pk=e.member_pk)where e.member_id=#{receive_user}
  </select> 
  
 
<insert id="insertMsg">
	insert into message values(message_SEQ.nextVal,member_seq.currVal,#{send_user},#{receive_user},#{send_content},sysdate,default)
</insert>

