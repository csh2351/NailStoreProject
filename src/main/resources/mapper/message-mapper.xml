<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="message">
  <select id="selectCheck" parameterType="string" resultType="_int">
  	select count(*) from member where member_id=#{receive_user}
  </select> 
  
 
<insert id="insertMsg">
	insert into message values(message_SEQ.nextVal,#{member_pk},#{send_user},#{receive_user},#{send_content},sysdate,default)
</insert>

<resultMap type="message" id="message"/>

<select id="selectList" resultMap="message" parameterType="String"> select * from message where send_user=#{send_user} </select>


<select id="selectList2" resultMap="message" parameterType="String"> select * from message where receive_user=#{receive_user} </select>
</mapper>
